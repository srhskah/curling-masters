# 环境变量示例文件
# 复制此文件为 .env 并填入实际值

# 数据库类型 (local 或 turso)
DATABASE_TYPE=turso

# 本地数据库配置
DB_ENCRYPTION_KEY=your_encryption_key_here

# Turso数据库配置
TURSO_URL=libsql://your-database-name.region.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token_here

# Flask密钥 (使用 scripts/generate_secret_key.py 生成)
SECRET_KEY=your_secret_key_here
